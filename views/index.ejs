<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your products</title>
    <style>
      div * {
        margin: 10px 5px;
      }

      a {
        color: black;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <h1>Your Products</h1>
    <button><a href="/addProduct">Add new product</a></button>
    <% resulte.forEach((item) => { %>
    <div>
      <div>
        <span style="font-weight: bold"> ID: <%= item.id %> </span>
        <a href="/update/<%=item.id%>">&#9998;</a>
        <a href="/delete/<%=item.id%>">&#128465;</a>
      </div>
      <h2><%= item.title%></h2>
      <h3><%= item.animal%></h3>
      <h3><%= item.category%></h3>
      <p style="width: 250px"><%= item.description%></p>
      <h4>$<%= item.price%></h4>
      <img src="<%= item.image%>" alt="" style="width: 250px" />
    </div>
    <%})%>
  </body>
</html>
